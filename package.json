{
  "name": "Bun-Monorepo-Docker-Deployment",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "cd packages/db  && bunpx prisma generate && cd ../..",
    "start:backend": "cd apps/backend && bun run index.ts",
    "start:ws": "cd apps/ws  && bun run index.ts",
    "strat:web": "cd apps/web  && bun run index.ts"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.17",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
